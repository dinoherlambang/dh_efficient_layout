<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- 
        SALES ORDER TEMPLATE INHERITANCE FOR SPACEY LAYOUT
        
        This file inherits the standard Odoo sales order template to customize
        the formatting and positioning of sales order-specific elements when
        using the Spacey Layout.
        
        Original template: sale.report_saleorder_document
        Location: /usr/lib/python3/dist-packages/odoo/addons/sale/report/sale_report_templates.xml
        -->
        
        <template id="report_saleorder_document_spacey" inherit_id="sale.report_saleorder_document">
            
            <!-- DISABLE OLD ADDRESS SECTION -->
            <!-- Make the old address format empty -->
            <xpath expr="//address" position="replace">
                <!-- Old address section disabled - now handled in Spacey Layout header -->
            </xpath>
            
            <!-- STYLE TABLE HEADERS WITH BOLD LINES -->
            <!-- Add bold borders to table headers like Subtotal/Total -->
            <xpath expr="//table[contains(@class,'table')]//thead//tr" position="attributes">
                <attribute name="style">border-top: 2px solid #000; border-bottom: 2px solid #000;</attribute>
            </xpath>
            
            <!-- STYLE TABLE HEADER CELLS -->
            <!-- Make header text bold and add padding -->
            <xpath expr="//table[contains(@class,'table')]//thead//th" position="attributes">
                <attribute name="style">font-weight: bold; padding: 10px 8px; background-color: #f8f9fa;</attribute>
            </xpath>
            
            <!-- CUSTOMIZE SALES ORDER INFORMATIONS SECTION -->
            <!-- Replace with spacey 4-column form-style layout for maximum efficiency -->
            <xpath expr="//div[@id='informations']" position="replace">
                <div id="informations" class="mt16 mb16" style="border-top: 1px solid #2C5282; border-bottom: 1px solid #2C5282; padding: 12px 0;">
                    
                    <!-- FIRST ROW: Order Date | Value | Expiration | Value -->
                    <div class="row mb-2" t-if="doc.date_order or (doc.validity_date and doc.state in ['draft', 'sent'])">
                        <!-- Order/Quotation Date Label -->
                        <div class="col-3" t-if="doc.date_order">
                            <strong style="color: #2C5282; font-size: 15px;">
                                <t t-if="doc.state not in ['draft','sent']">Order Date:</t>
                                <t t-else="">Quotation Date:</t>
                            </strong>
                        </div>
                        <!-- Order/Quotation Date Value -->
                        <div class="col-3" t-if="doc.date_order">
                            <span style="font-size: 15px;">
                                <t t-if="doc.state not in ['draft','sent']"><span t-field="doc.date_order"/></t>
                                <t t-else=""><span t-field="doc.date_order" t-options='{"widget": "date"}'/></t>
                            </span>
                        </div>
                        
                        <!-- Expiration Date Label -->
                        <div class="col-3" t-if="doc.validity_date and doc.state in ['draft', 'sent']">
                            <strong style="color: #2C5282; font-size: 15px;">Expiration:</strong>
                        </div>
                        <!-- Expiration Date Value -->
                        <div class="col-3" t-if="doc.validity_date and doc.state in ['draft', 'sent']">
                            <span style="font-size: 15px;" t-field="doc.validity_date"/>
                        </div>
                        
                        <!-- Fill remaining columns if only one field exists -->
                        <div class="col-6" t-if="doc.date_order and not (doc.validity_date and doc.state in ['draft', 'sent'])"></div>
                        <div class="col-6" t-if="not doc.date_order and (doc.validity_date and doc.state in ['draft', 'sent'])"></div>
                    </div>
                    
                    <!-- SECOND ROW: Customer Reference | Value | Salesperson | Value -->
                    <div class="row mb-2" t-if="doc.client_order_ref or doc.user_id.name">
                        <!-- Customer Reference Label -->
                        <div class="col-3" t-if="doc.client_order_ref">
                            <strong style="color: #2C5282; font-size: 15px;">Your Reference:</strong>
                        </div>
                        <!-- Customer Reference Value -->
                        <div class="col-3" t-if="doc.client_order_ref">
                            <span style="font-size: 15px;" t-field="doc.client_order_ref"/>
                        </div>
                        
                        <!-- Salesperson Label -->
                        <div class="col-3" t-if="doc.user_id.name">
                            <strong style="color: #2C5282; font-size: 15px;">Salesperson:</strong>
                        </div>
                        <!-- Salesperson Value -->
                        <div class="col-3" t-if="doc.user_id.name">
                            <span style="font-size: 15px;" t-field="doc.user_id"/>
                        </div>
                        
                        <!-- Fill remaining columns if only one field exists -->
                        <div class="col-6" t-if="doc.client_order_ref and not doc.user_id.name"></div>
                        <div class="col-6" t-if="not doc.client_order_ref and doc.user_id.name"></div>
                    </div>
                    
                    <!-- THIRD ROW: Customer Address (spans full width) -->
                    <div class="row" t-if="doc.partner_id">
                        <div class="col-3">
                            <strong style="color: #2C5282; font-size: 15px;">Customer:</strong>
                        </div>
                        <div class="col-9">
                            <span style="font-size: 15px;">
                                <span t-field="doc.partner_id.name"/><t t-if="doc.partner_id.street">, <span t-field="doc.partner_id.street"/></t><t t-if="doc.partner_id.street2">, <span t-field="doc.partner_id.street2"/></t><t t-if="doc.partner_id.city">, <span t-field="doc.partner_id.city"/></t><t t-if="doc.partner_id.state_id"> <span t-field="doc.partner_id.state_id.name"/></t><t t-if="doc.partner_id.zip"> <span t-field="doc.partner_id.zip"/></t><t t-if="doc.partner_id.country_id">, <span t-field="doc.partner_id.country_id.name"/></t>
                            </span>
                        </div>
                    </div>
                    
                </div>
            </xpath>
            
            <!-- REMOVE ORIGINAL SALES ORDER TITLE -->
            <!-- Since we moved the title to the layout header, remove it from here -->
            <xpath expr="//h2[@class='mt16']" position="replace">
                <!-- Title now handled in layout header -->
            </xpath>
            
        </template>
        
    </data>
</odoo>