<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- 
        PURCHASE ORDER TEMPLATE INHERITANCE FOR SPACEY LAYOUT
        
        This file inherits the standard Odoo purchase order template to customize
        the formatting and positioning of purchase order-specific elements when
        using the Spacey Layout.
        
        Original template: purchase.report_purchaseorder_document
        Location: /usr/lib/python3/dist-packages/odoo/addons/purchase/report/purchase_order_templates.xml
        -->
        
        <template id="report_purchaseorder_document_spacey" inherit_id="purchase.report_purchaseorder_document">
            
            <!-- CUSTOMIZE PURCHASE ORDER INFORMATIONS SECTION -->
            <!-- Replace the standard informations layout with spacey-styled version -->
            <xpath expr="//div[@id='informations']" position="replace">
                <div id="informations" class="row mt32 mb32" style="border: 1px solid #2C5282; border-radius: 8px; padding: 20px; background-color: #f8f9fa;">
                    
                    <!-- Purchase Representative - Enhanced styling -->
                    <div class="col-md-4 col-sm-6 mb-3" t-if="o.user_id" name="user_id">
                        <div style="text-align: center; padding: 10px;">
                            <strong style="color: #2C5282; font-size: 14px; display: block; margin-bottom: 5px;">Purchase Representative</strong>
                            <p class="m-0" style="font-size: 13px; font-weight: 500;" t-field="o.user_id"/>
                        </div>
                    </div>
                    
                    <!-- Vendor Reference - Enhanced styling -->
                    <div class="col-md-4 col-sm-6 mb-3" t-if="o.partner_ref" name="partner_ref">
                        <div style="text-align: center; padding: 10px;">
                            <strong style="color: #2C5282; font-size: 14px; display: block; margin-bottom: 5px;">Your Order Reference</strong>
                            <p class="m-0" style="font-size: 13px; font-weight: 500;" t-field="o.partner_ref"/>
                        </div>
                    </div>
                    
                    <!-- Order Date/Deadline - Enhanced styling -->
                    <div class="col-md-4 col-sm-6 mb-3" t-if="o.state in ['purchase','done'] and o.date_approve or o.date_order" name="order_date">
                        <div style="text-align: center; padding: 10px;">
                            <strong style="color: #2C5282; font-size: 14px; display: block; margin-bottom: 5px;">
                                <t t-if="o.state in ['purchase','done'] and o.date_approve">Order Date</t>
                                <t t-else="">Order Deadline</t>
                            </strong>
                            <p class="m-0" style="font-size: 13px; font-weight: 500;">
                                <t t-if="o.state in ['purchase','done'] and o.date_approve">
                                    <span t-field="o.date_approve"/>
                                </t>
                                <t t-else="">
                                    <span t-field="o.date_order"/>
                                </t>
                            </p>
                        </div>
                    </div>
                    
                </div>
            </xpath>
            
            <!-- REMOVE ORIGINAL PURCHASE ORDER TITLES -->
            <!-- Since we moved the titles to the layout header, remove them from here -->
            <xpath expr="//h2[contains(text(), 'Request for Quotation')]" position="replace">
                <!-- Title now handled in layout header -->
            </xpath>
            <xpath expr="//h2[contains(text(), 'Purchase Order')]" position="replace">
                <!-- Title now handled in layout header -->
            </xpath>
            <xpath expr="//h2[contains(text(), 'Cancelled Purchase Order')]" position="replace">
                <!-- Title now handled in layout header -->
            </xpath>
            
        </template>
        
    </data>
</odoo>