<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- 
        INVOICE TEMPLATE INHERITANCE FOR SPACEY LAYOUT
        
        This file inherits the standard Odoo invoice template to customize
        the formatting and positioning of invoice-specific elements when
        using the Spacey Layout.
        
        Original template: account.report_invoice_document
        Location: /usr/lib/python3/dist-packages/odoo/addons/account/views/report_invoice.xml
        -->
        
        <template id="report_invoice_document_spacey" inherit_id="account.report_invoice_document">
            
            <!-- CHANGE LAYOUT TO SPACEY -->
            <!-- Replace web.external_layout with our Spacey Layout -->
            <xpath expr="//t[@t-call='web.external_layout']" position="attributes">
                <attribute name="t-call">dh_efficient_layout.external_layout_spacey</attribute>
            </xpath>
            
            <!-- REMOVE ORIGINAL INVOICE TITLE -->
            <xpath expr="//h2" position="replace">
            </xpath>
            
            <!-- REMOVE DUPLICATE PARTNER/ADDRESS INFORMATION -->
            <!-- Remove the entire address section since it's handled in Spacey Layout header -->
            <xpath expr="//t[@t-set='address']" position="replace">
                <div style="display: none;"/>
            </xpath>
           
            
            <!-- STYLE TABLE HEADERS WITH BOLD LINES -->
            <!-- Add bold borders to table headers like Subtotal/Total -->
            <xpath expr="//table[@name='invoice_line_table']//thead//tr" position="attributes">
                <attribute name="style">border-top: 2px solid #000; border-bottom: 2px solid #000;</attribute>
            </xpath>
            
            <!-- STYLE TABLE HEADER CELLS -->
            <!-- Make header text bold and add padding -->
            <xpath expr="//table[@name='invoice_line_table']//thead//th" position="attributes">
                <attribute name="style">font-weight: bold; padding: 8px 8px; background-color: #f8f9fa;</attribute>
            </xpath>
            
            <!-- CUSTOMIZE INVOICE INFORMATIONS SECTION -->
            <!-- Replace with spacey 4-column form-style layout for maximum efficiency -->
            <xpath expr="//div[@id='informations']" position="replace">
                <!-- <div id="informations" class="mt16 mb16" style="border-top: 1px solid #2C5282; border-bottom: 1px solid #2C5282; padding: 12px 0;"> -->
                <div id="informations" class="mt16 mb16" style="border-top: 1px solid #2C5282; padding: 12px 0;">
                    
                    <!-- SET INVOICE ADDRESS VARIABLES ONCE -->
                    <t t-set="invoice_address" t-value="o.partner_id.address_get(['invoice'])['invoice'] if o.partner_id else False"/>
                    <t t-set="partner_addr" t-value="o.env['res.partner'].browse(invoice_address) if invoice_address else o.partner_id"/>
                    
                    <!-- FIRST ROW: Invoice Date | Value | Due Date | Value -->
                    <div class="row mb-2" t-if="o.invoice_date or (o.invoice_date_due and o.type == 'out_invoice' and o.state == 'posted')">
                        <!-- Invoice Date Label -->
                        <div class="col-3" t-if="o.invoice_date">
                            <strong style="color: #2C5282; font-size: 15px;">
                                <t t-if="o.type == 'out_invoice'">Invoice Date:</t>
                                <t t-elif="o.type == 'out_refund'">Credit Note Date:</t>
                                <t t-else="">Date:</t>
                            </strong>
                        </div>
                        <!-- Invoice Date Value -->
                        <div class="col-3" t-if="o.invoice_date">
                            <span style="font-size: 15px;" t-field="o.invoice_date"/>
                        </div>
                        
                        <!-- Due Date Label -->
                        <div class="col-3" t-if="o.invoice_date_due and o.type == 'out_invoice' and o.state == 'posted'">
                            <strong style="color: #2C5282; font-size: 15px;">Due Date:</strong>
                        </div>
                        <!-- Due Date Value -->
                        <div class="col-3" t-if="o.invoice_date_due and o.type == 'out_invoice' and o.state == 'posted'">
                            <span style="font-size: 15px;" t-field="o.invoice_date_due"/>
                        </div>
                        
                        <!-- Fill remaining columns if only one field exists -->
                        <div class="col-6" t-if="o.invoice_date and not (o.invoice_date_due and o.type == 'out_invoice' and o.state == 'posted')"></div>
                        <div class="col-6" t-if="not o.invoice_date and (o.invoice_date_due and o.type == 'out_invoice' and o.state == 'posted')"></div>
                    </div>
                    
                    <!-- SECOND ROW: Source | Value | Customer Address | Value -->
                    <div class="row mb-2" t-if="o.invoice_origin or o.partner_id">
                        <!-- Source Label -->
                        <div class="col-3" t-if="o.invoice_origin">
                            <strong style="color: #2C5282; font-size: 15px;">Source:</strong>
                        </div>
                        <!-- Source Value -->
                        <div class="col-3" t-if="o.invoice_origin">
                            <span style="font-size: 15px;" t-field="o.invoice_origin"/>
                        </div>
                        
                        <!-- Customer Label -->
                        <div class="col-3" t-if="o.partner_id">
                            <strong style="color: #2C5282; font-size: 15px;">Customer:</strong>
                        </div>
                        <!-- Customer Value -->
                        <div class="col-3" t-if="o.partner_id">
                            <span style="font-size: 15px;" t-field="partner_addr.name"/>
                        </div>
                        
                        <!-- Fill remaining columns if only one field exists -->
                        <div class="col-6" t-if="o.invoice_origin and not o.partner_id"></div>
                        <div class="col-6" t-if="not o.invoice_origin and o.partner_id"></div>
                    </div>
                    
                    <!-- THIRD ROW: Customer Code | Value | VAT | Value -->
                    <div class="row mb-2" t-if="o.partner_id.ref or o.ref or o.partner_id">
                        <!-- Customer Code Label -->
                        <div class="col-3" t-if="o.partner_id.ref">
                            <strong style="color: #2C5282; font-size: 15px;">Customer Code:</strong>
                        </div>
                        <!-- Customer Code Value -->
                        <div class="col-3" t-if="o.partner_id.ref">
                            <span style="font-size: 15px;" t-field="o.partner_id.ref"/>
                        </div>
                        
                        <!-- VAT Label (using invoice address partner) -->
                        <div class="col-3" t-if="o.partner_id and partner_addr.vat">
                            <strong style="color: #2C5282; font-size: 15px;">
                                <t t-if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label"/>
                                <t t-else="">Tax ID</t>:
                            </strong>
                        </div>
                        <!-- VAT Value -->
                        <div class="col-3" t-if="o.partner_id and partner_addr.vat">
                            <span style="font-size: 15px;" t-field="partner_addr.vat"/>
                        </div>
                        
                        <!-- Reference Label (only if no customer code) -->
                        <div class="col-3" t-if="o.ref and not o.partner_id.ref">
                            <strong style="color: #2C5282; font-size: 15px;">Reference:</strong>
                        </div>
                        <!-- Reference Value (only if no customer code) -->
                        <div class="col-3" t-if="o.ref and not o.partner_id.ref">
                            <span style="font-size: 15px;" t-field="o.ref"/>
                        </div>
                        
                        <!-- Fill remaining columns dynamically -->
                        <t t-set="has_code" t-value="bool(o.partner_id.ref)"/>
                        <t t-set="has_vat" t-value="bool(o.partner_id and o.env['res.partner'].browse(o.partner_id.address_get(['invoice'])['invoice']).vat)"/>
                        <t t-set="has_ref" t-value="bool(o.ref and not o.partner_id.ref)"/>
                        
                        <!-- Fill empty columns when needed -->
                        <div class="col-6" t-if="not has_code and not has_ref and has_vat"></div>
                        <div class="col-6" t-if="has_code and not has_vat and not has_ref"></div>
                        <div class="col-3" t-if="not has_code and not has_vat and has_ref"></div>
                        <div class="col-9" t-if="not has_code and not has_vat and not has_ref"></div>
                    </div>
                    
                    <!-- FOURTH ROW: Reference (if customer code exists) -->
                    <div class="row mb-2" t-if="o.ref and o.partner_id.ref">
                        <!-- Reference Label -->
                        <div class="col-3">
                            <strong style="color: #2C5282; font-size: 15px;">Reference:</strong>
                        </div>
                        <!-- Reference Value -->
                        <div class="col-3">
                            <span style="font-size: 15px;" t-field="o.ref"/>
                        </div>
                        <!-- Empty columns -->
                        <div class="col-6"></div>
                    </div>
                    
                    <!-- FIFTH ROW: Customer Address (spans full width for long addresses) -->
                    <div class="row" t-if="o.partner_id">
                        <div class="col-3">
                            <strong style="color: #2C5282; font-size: 15px;">Address:</strong>
                        </div>
                        <div class="col-9">
                            <span style="font-size: 15px;">
                                <t t-if="partner_addr.street"><span t-field="partner_addr.street"/></t><t t-if="partner_addr.street2">, <span t-field="partner_addr.street2"/></t><t t-if="partner_addr.city">, <span t-field="partner_addr.city"/></t><t t-if="partner_addr.state_id"> <span t-field="partner_addr.state_id.name"/></t><t t-if="partner_addr.zip"> <span t-field="partner_addr.zip"/></t><t t-if="partner_addr.country_id">, <span t-field="partner_addr.country_id.name"/></t>
                            </span>
                        </div>
                    </div>
                    
                </div>
            </xpath>
            
        </template>
        
    </data>
</odoo>