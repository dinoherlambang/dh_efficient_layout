<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- 
        DELIVERY NOTE TEMPLATE INHERITANCE FOR SPACEY LAYOUT
        
        This file inherits the standard Odoo delivery note template to customize
        the formatting and positioning of delivery note-specific elements when
        using the Spacey Layout.
        
        Original template: stock.report_delivery_document
        Location: /usr/lib/python3/dist-packages/odoo/addons/stock/report/report_deliveryslip.xml
        -->
        
        <template id="report_delivery_document_spacey" inherit_id="stock.report_delivery_document">
            
            <!-- CHANGE LAYOUT TO SPACEY -->
            <!-- Replace web.external_layout with our Spacey Layout -->
            <xpath expr="//t[@t-call='web.external_layout']" position="attributes">
                <attribute name="t-call">dh_efficient_layout.external_layout_spacey</attribute>
            </xpath>

            <!-- STYLE TABLE HEADERS WITH BOLD LINES -->
            <!-- Add bold borders to table headers like Subtotal/Total -->
            <xpath expr="//table[contains(@class,'table')]//thead//tr" position="attributes">
                <attribute name="style">border-top: 2px solid #000; border-bottom: 2px solid #000;</attribute>
            </xpath>
            
            <!-- STYLE TABLE HEADER CELLS -->
            <!-- Make header text bold and add padding -->
            <xpath expr="//table[contains(@class,'table')]//thead//th" position="attributes">
                <attribute name="style">font-weight: bold; padding: 10px 8px; background-color: #f8f9fa;</attribute>
            </xpath>
            
            <!-- ADD DESTINATION ADDRESS TO TABLE HEADER -->
            <!-- Insert destination address row before the column headers -->
            <xpath expr="//table[contains(@class,'table')]//thead//tr[1]" position="before">
                <tr t-if="o.partner_id">
                    <td colspan="2" style="border: none; padding: 8px; background-color: #ffffff;">
                        <strong style="color: #000; font-size: 15px;">Destination: </strong>
                        <span style="font-size: 15px;">
                            <!-- Get the proper delivery address -->
                            <t t-set="delivery_address" t-value="o.partner_id.address_get(['delivery'])['delivery']"/>
                            <t t-set="partner_addr" t-value="o.env['res.partner'].browse(delivery_address)"/>
                            <span t-field="partner_addr.name"/><t t-if="partner_addr.street">, <span t-field="partner_addr.street"/></t><t t-if="partner_addr.street2">, <span t-field="partner_addr.street2"/></t><t t-if="partner_addr.city">, <span t-field="partner_addr.city"/></t><t t-if="partner_addr.state_id"> <span t-field="partner_addr.state_id.name"/></t><t t-if="partner_addr.zip"> <span t-field="partner_addr.zip"/></t><t t-if="partner_addr.country_id">, <span t-field="partner_addr.country_id.name"/></t>
                        </span>
                    </td>
                </tr>
            </xpath>
            
            <!-- HIDE REDUNDANT DOCUMENT NAME -->
            <!-- Hide the h2 element showing document name since it's already in our header -->
            <!-- <xpath expr="//h2[span[@t-field='o.name']]" position="replace">
            </xpath> -->
            
            <!-- HIDE REDUNDANT PARTNER/ADDRESS SECTION -->
            <!-- Hide the partner header section since we show destination address in table header -->
            <!-- <xpath expr="//t[@name='partner_header']" position="replace">
            </xpath> -->
            
            <!-- CUSTOMIZE DELIVERY NOTE INFORMATIONS SECTION -->
            <!-- Replace with spacey 4-column form-style layout for maximum efficiency -->
            <xpath expr="//div[div[@name='div_origin'] or div[@name='div_sched_date']]" position="replace">
                                <div id="informations" class="mt16 mb16" style="border-top: 1px solid #000; border-bottom: 1px solid #000; padding: 12px 0;">
                    
                    <!-- FIRST ROW: Source Order | Value | Shipping Date | Value -->
                    <div class="row mb-2" t-if="o.origin or o.state">
                        <!-- Source Order Label -->
                        <div class="col-3" t-if="o.origin">
                            <strong style="color: #000; font-size: 15px;">Source Order:</strong>
                        </div>
                        <!-- Source Order Value -->
                        <div class="col-3" t-if="o.origin">
                            <span style="font-size: 15px;" t-field="o.origin"/>
                        </div>
                        
                        <!-- Shipping Date Label -->
                        <div class="col-3" t-if="o.state">
                            <strong style="color: #000; font-size: 15px;">Shipping Date:</strong>
                        </div>
                        <!-- Shipping Date Value -->
                        <div class="col-3" t-if="o.state">
                            <span style="font-size: 15px;">
                                <t t-if="o.state == 'done'">
                                    <span t-field="o.date_done"/>
                                </t>
                                <t t-if="o.state != 'done'">
                                    <span t-field="o.scheduled_date"/>
                                </t>
                            </span>
                        </div>
                        
                        <!-- Fill remaining columns if only one field exists -->
                        <div class="col-6" t-if="o.origin and not o.state"></div>
                        <div class="col-6" t-if="not o.origin and o.state"></div>
                    </div>
                    
                </div>
            </xpath>
            
        </template>
        
    </data>
</odoo>