<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Spacey Layout Template -->
    <!-- Spacey Layout Template - Clean and Simple based on Clean layout -->
    <template id="external_layout_spacey">
        <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
            <div class="row">
                <!-- Logo Section -->
                <div class="col-3">
                    <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height: 45px;" alt="Logo"/>
                </div>
                
                <!-- Document Title and Number Section -->
                <div class="col-6 text-center">
                    <t t-if="o and o._name">
                        <!-- Document type detection -->
                        <t t-if="o._name == 'stock.picking'">
                            <h3 style="margin: 5px 0; color: #875A7B;">
                                <span t-field="o.picking_type_id.name" t-if="o.picking_type_id"/>
                                <span t-if="not o.picking_type_id">Transfer</span>
                            </h3>
                            <p style="margin: 0; font-weight: bold;" t-if="o.name">
                                <span t-field="o.name"/>
                            </p>
                        </t>
                        <t t-elif="o._name == 'account.move'">
                            <h3 style="margin: 5px 0; color: #875A7B;">
                                <span t-if="o.move_type == 'out_invoice'">Invoice</span>
                                <span t-elif="o.move_type == 'out_refund'">Credit Note</span>
                                <span t-elif="o.move_type == 'in_invoice'">Vendor Bill</span>
                                <span t-elif="o.move_type == 'in_refund'">Vendor Credit Note</span>
                                <span t-else="">Document</span>
                            </h3>
                            <p style="margin: 0; font-weight: bold;" t-if="o.name">
                                <span t-field="o.name"/>
                            </p>
                        </t>
                        <t t-elif="o._name == 'sale.order'">
                            <h3 style="margin: 5px 0; color: #875A7B;">Sales Order</h3>
                            <p style="margin: 0; font-weight: bold;" t-if="o.name">
                                <span t-field="o.name"/>
                            </p>
                        </t>
                        <t t-elif="o._name == 'purchase.order'">
                            <h3 style="margin: 5px 0; color: #875A7B;">Purchase Order</h3>
                            <p style="margin: 0; font-weight: bold;" t-if="o.name">
                                <span t-field="o.name"/>
                            </p>
                        </t>
                        <t t-else="">
                            <h3 style="margin: 5px 0; color: #875A7B;">Document</h3>
                            <p style="margin: 0; font-weight: bold;" t-if="o.name">
                                <span t-field="o.name"/>
                            </p>
                        </t>
                    </t>
                </div>
                
                <!-- Company Info Section -->
                <div class="col-3 text-right">
                    <ul class="list-unstyled" style="margin: 0; font-size: 12px;">
                        <strong><li t-if="company.name"><span t-field="company.name"/></li></strong>
                        <li t-if="company.vat">
                            <t t-esc="company.country_id.vat_label or 'Tax ID'"/>: 
                            <span t-field="company.vat"/>
                        </li>
                        <li t-if="company.phone">
                            Tel: <span class="o_force_ltr" t-field="company.phone"/>
                        </li>
                        <li t-if="company.email">
                            <span t-field="company.email"/>
                        </li>
                        <li t-if="company.website">
                            <span t-field="company.website"/>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div t-attf-class="article o_report_layout_spacey o_company_#{company.id}_layout" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-call="web.address_layout"/>
            <t t-raw="0"/>
        </div>

        <div t-attf-class="footer o_company_#{company.id}_layout">
            <div class="text-center" style="border-top: 1px solid #ddd; padding-top: 10px;">
                <div t-if="report_type == 'pdf'" class="text-muted">
                    Page <span class="page"/> of <span class="topage"/>
                </div>
            </div>
        </div>
    </template>        <!-- Layout Registration -->
        <record id="report_layout_spacey" model="report.layout">
            <field name="name">Spacey Layout</field>
            <field name="view_id" ref="external_layout_spacey"/>
        </record>

    </data>
</odoo>